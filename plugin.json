{
    "name": "Checklist",
    "author": ["David Collien"],
    "email": "david@openlearning.com",
    "license": "MIT",
    "version": "0.0.3",
    "description": "Check items off a list towards completion.",
    "categories": ["Self Assessment"],


    "setup": {
        "checklist": [{"id": "1", "text": "I've done this!"}],
        "doneMessage": "All Done!"
    },

    "display": {
        "main": "display.html",
        "setup": "setup.html"
    },

    "completion": {
        "settings": ["interaction", "progress", "custom"],
        "progress": "keys",
        "default": "custom",
        "customText": "Completed when everything has been checked off",
        "criteria": {
            "1": true
        },
        "comparison": "equal"
    },

    "icon": {
        "image": "User Interface/Double-Check",
        "color": "#be5ab5"
    }
}
